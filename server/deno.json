{
    "name": "@24wings/server",
    "version": "0.0.1",
    "exports": {
        "./plugin": "./plugin.ts",
        "./orpc-client": "./orpc-client.ts",
        "./server": "./server.tsx"
    },
    "tasks": {
        "server": "deno run -A  --unstable-raw-imports  --unstable-bundle --watch server.tsx",
        "dev": "deno serve -A --unstable-raw-imports  --unstable-bundle --watch main.tsx",
        "bundle": "deno bundle --platform browser -c client.json client.tsx --output client.js ",
        "install": "deno install -A  server.tsx -f --global -c deno.json",
        "publish": "deno publish --no-check --allow-slow-types --allow-dirty"
    },
    "imports": {
        "@logtape/logtape": "jsr:@logtape/logtape@^2.0.0",
        "@logtape/pretty": "jsr:@logtape/pretty@^2.0.0",
        "@orpc/client": "npm:@orpc/client@^1.13.4",
        "@orpc/openapi": "npm:@orpc/openapi@^1.13.4",
        "@orpc/server": "npm:@orpc/server@^1.13.4",
        "@orpc/zod": "npm:@orpc/zod@^1.13.4",
        "@preact/signals": "npm:@preact/signals@^2.5.1",
        "@std/assert": "jsr:@std/assert@1",
        "@std/cli": "jsr:@std/cli@^1.0.25",
        "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
        "@std/fs": "jsr:@std/fs@^1.0.21",
        "@std/path": "jsr:@std/path@^1.1.4",
        "class-variance-authority": "npm:class-variance-authority@^0.7.1",
        "clsx": "npm:clsx@^2.1.1",
        "hono": "npm:hono@^4.11.4",
        "preact": "npm:preact@^10.28.2",
        "preact-iso": "npm:preact-iso@^2.11.1",
        "@24wings/shadcn": "../libs/shadcn/mod.tsx",
        "@24wings/shadcn/pro": "../libs/shadcn/pro.ts",
        "@24wings/build": "../libs/build/mod.ts",
        "tailwind-merge": "npm:tailwind-merge@^3.4.0",
        "kysely": "npm:kysely@^0.28.9",
        "libsql": "npm:libsql@^0.5.22",
        "mysql2": "npm:mysql2@^3.16.0",
        "zod": "npm:zod@^4.3.5"
    },
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "preact"
    },
    "publish": {
        "exclude": [
            "tests"
        ]
    }
}