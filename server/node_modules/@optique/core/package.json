{
  "name": "@optique/core",
  "version": "0.9.1",
  "description": "Type-safe combinatorial command-line interface parser",
  "keywords": [
    "CLI",
    "command-line",
    "commandline",
    "parser",
    "getopt",
    "optparse"
  ],
  "license": "MIT",
  "author": {
    "name": "Hong Minhee",
    "email": "hong@minhee.org",
    "url": "https://hongminhee.org/"
  },
  "homepage": "https://optique.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dahlia/optique.git",
    "directory": "packages/core/"
  },
  "bugs": {
    "url": "https://github.com/dahlia/optique/issues"
  },
  "funding": [
    "https://github.com/sponsors/dahlia"
  ],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.2.0",
    "deno": ">=2.3.0"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./completion": {
      "types": {
        "import": "./dist/completion.d.ts",
        "require": "./dist/completion.d.cts"
      },
      "import": "./dist/completion.js",
      "require": "./dist/completion.cjs"
    },
    "./constructs": {
      "types": {
        "import": "./dist/constructs.d.ts",
        "require": "./dist/constructs.d.cts"
      },
      "import": "./dist/constructs.js",
      "require": "./dist/constructs.cjs"
    },
    "./doc": {
      "types": {
        "import": "./dist/doc.d.ts",
        "require": "./dist/doc.d.cts"
      },
      "import": "./dist/doc.js",
      "require": "./dist/doc.cjs"
    },
    "./facade": {
      "types": {
        "import": "./dist/facade.d.ts",
        "require": "./dist/facade.d.cts"
      },
      "import": "./dist/facade.js",
      "require": "./dist/facade.cjs"
    },
    "./message": {
      "types": {
        "import": "./dist/message.d.ts",
        "require": "./dist/message.d.cts"
      },
      "import": "./dist/message.js",
      "require": "./dist/message.cjs"
    },
    "./modifiers": {
      "types": {
        "import": "./dist/modifiers.d.ts",
        "require": "./dist/modifiers.d.cts"
      },
      "import": "./dist/modifiers.js",
      "require": "./dist/modifiers.cjs"
    },
    "./nonempty": {
      "types": {
        "import": "./dist/nonempty.d.ts",
        "require": "./dist/nonempty.d.cts"
      },
      "import": "./dist/nonempty.js",
      "require": "./dist/nonempty.cjs"
    },
    "./parser": {
      "types": {
        "import": "./dist/parser.d.ts",
        "require": "./dist/parser.d.cts"
      },
      "import": "./dist/parser.js",
      "require": "./dist/parser.cjs"
    },
    "./primitives": {
      "types": {
        "import": "./dist/primitives.d.ts",
        "require": "./dist/primitives.d.cts"
      },
      "import": "./dist/primitives.js",
      "require": "./dist/primitives.cjs"
    },
    "./usage": {
      "types": {
        "import": "./dist/usage.d.ts",
        "require": "./dist/usage.d.cts"
      },
      "import": "./dist/usage.js",
      "require": "./dist/usage.cjs"
    },
    "./valueparser": {
      "types": {
        "import": "./dist/valueparser.d.ts",
        "require": "./dist/valueparser.d.cts"
      },
      "import": "./dist/valueparser.js",
      "require": "./dist/valueparser.cjs"
    }
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^20.19.9",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "tsdown",
    "prepublish": "tsdown",
    "test": "tsdown && node --experimental-transform-types --test",
    "test:bun": "tsdown && bun test",
    "test:deno": "deno test",
    "test-all": "tsdown && node --experimental-transform-types --test && bun test && deno test"
  }
}